# declarer une variable
#: set s dp(150)

<CanvasExemples1>:
    canvas:

        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos:500,200
            size:s,s/2
        Line:
            points:(0,0,self.width/4,self.height/8,self.width/2,0,3*self.width/4,self.height/8,self.width,0)
            width:2

<CanvasExemples2>:
    canvas:
        Line:
            points:(self.width/2,0,self.width/2,self.height)
            width:2
        Line:
            points:(0,self.height/2,self.width,self.height/2)
            width:2

<CanvasExemples3>:
    canvas:
        Color:
            rgba:1,0,0,.7
        Line:
            circle:(300,300,100)
            width:3

        Color:
            rgba:0,1,0,.5
        Line:
            ellipse:(300,300,200,100)
            width:3

        Color:
            rgba:0,0,1,.3
        Line:
            rectangle:(200,100,200,150)
            width:3

<CanvasExemples4>:
    Button:
        pos:root.width-100, root.height-100
        text:"MOUVE"
        on_press: root.mouve_rect()

<CanvasExemples6>:
