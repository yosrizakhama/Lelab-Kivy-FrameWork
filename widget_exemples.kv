<ImageExemples@GridLayout>
    cols: 3

    Image:
        source:"images/cake.jpg"
    Image:
        source:"images/cake.jpg"
        allow_stretch: True
    Image:
        source:"images/cake.jpg"
        allow_stretch: True
        keep_ratio: False
    MyImage:

<WidgetExemple>:
    cols: 3
    ToggleButton:
        text:"OFF"
        on_state:root.state_change(self)
        size_hint: None,1
        width:100
    Button:
        text: "Compter"
        on_press:root.click_button()
        disabled:not root.toggle
    Label:
        font_name: "font/Open 24 Display St.ttf"
        font_size:'60sp'
        color: 1,0,0,1
        text: root.text
    Switch:
        id:mon_switch
        active: True
        size_hint: None,1
        width:100
        on_active: root.swith_on_active(self)
    Slider:
        disabled: not(mon_switch.active)
        id:mon_slider
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
        on_value: root.on_slide_value(self)
    BoxLayout:
        orientation:"vertical"
        Label:
            text: str(int(mon_slider.value))
            font_name: "font/Open 24 Display St.ttf"
            font_size:'60sp'
            color: 1,0,1,1
        ProgressBar:
            max:100
            value:mon_slider.value
    TextInput:
        id:mon_textinput
        size_hint:None,1
        width:"100dp"
        on_text_validate: root.on_text_validate(self)
        multiline: False
    Label:
        text:root.name